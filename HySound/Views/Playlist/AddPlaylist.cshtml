@using HySound.Models.Models
@model Playlist

<div class="add-playlist-container">
    <div class="playlist-preview">
        <label for="cover-upload" class="cover-label">
            <img id="cover-preview" src="/Images/default-cover.jpg" alt="Playlist Cover">
            <input type="file" id="cover-upload" accept="image/*" hidden>
        </label>
    </div>
    <div class="playlist-info">
        <input type="text" id="playlist-title" placeholder="Ново име на плейлиста">
        <button class="create-playlist-btn">Създай</button>
    </div>
</div>

<script>
    document.getElementById("cover-upload").addEventListener("change", function (event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById("cover-preview").src = e.target.result;
            }
            reader.readAsDataURL(file);
        }
    });
</script>

<style>
    .add-playlist-container {
        display: flex;
        align-items: center;
        gap: 20px;
        padding: 20px;
        color: white;
    }

    .playlist-preview {
        width: 180px;
        height: 180px;
        border-radius: 12px;
        overflow: hidden;
        background: #282828;
        display: flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
    }

        .playlist-preview img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .playlist-info {
        display: flex;
        flex-direction: column;
    }

    #playlist-title {
        background: none;
        border: none;
        color: white;
        font-size: 1.5rem;
        font-weight: bold;
        outline: none;
        width: 300px;
        padding: 5px;
        border-bottom: 2px solid #1DB954;
    }

    .create-playlist-btn {
        background: #1DB954;
        border: none;
        padding: 10px 20px;
        color: white;
        font-weight: bold;
        border-radius: 20px;
        cursor: pointer;
        margin-top: 10px;
        transition: 0.2s;
    }

        .create-playlist-btn:hover {
            background: #1ed760;
        }
</style>
