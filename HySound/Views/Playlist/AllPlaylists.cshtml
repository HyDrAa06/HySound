@using HySound.Models.Models
@model IEnumerable<Playlist>


<div class="row">
    <div class="col-10">
        <h1>All Playlists</h1>
    </div>
    <div class="col-2">
        <a class="btn-danger" asp-controller="Playlist" asp-action="AddPlaylist">Add Playlist</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var playlist in Model)
        {
            <tr>
                <th>@playlist.Title</th>
                <th>@playlist.Description</th>
                <td>
                    <a class="btn-info" asp-controller="Playlist" asp-action="Update" asp-route-id="@playlist.Id">Update</a>
                    <a class="btn-danger" asp-controller="Playlist" asp-action="Delete" asp-route-id="@playlist.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>