@using HySound.ViewModels.Playlist
@model PlaylistViewModel

@if (Model == null)
{
    <div class="error-message">
        <h2>Плейлистът не е намерен</h2>
        <p>Търсеният плейлист не може да бъде намерен. Моля, опитайте отново.</p>
        <a asp-controller="Home" asp-action="Search" class="back-btn" title="Назад">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>
}
else
{
    <div class="playlist-details">
        <div class="playlist-header" id="playlistHeader">
            <div class="playlist-cover-container">
                <div class="back-button-container">
                    <a asp-action="Search" asp-controller="Home" class="back-btn" title="Назад">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                </div>
                <img src="@(Model.CoverImage ?? "/images/default-cover.jpg")" alt="@(Model.Title ?? "Неизвестен плейлист")" class="playlist-cover" id="playlistCover" />
            </div>
            <div class="playlist-info">
                <p class="playlist-type">ПЛЕЙЛИСТ</p>
                <h1 class="playlist-title">@(Model.Title ?? "Неизвестен плейлист")</h1>
                <div class="playlist-meta">
                    @if (!string.IsNullOrEmpty(Model.UserName))
                    {
                        <a href="/user/@Model.UserName" class="creator-link">
                            <div class="creator-avatar">
                                <img src="@(Model.CoverImage ?? "/images/default-avatar.jpg")" alt="@Model.UserName" />
                            </div>
                            <span class="creator-name">@Model.UserName</span>
                        </a>
                    }
                    <p class="playlist-stats">
                        @if (Model.Tracks != null)
                        {
                            <span>@Model.Tracks.Count() песни</span>
                        }
                    </p>
                </div>
            </div>
        </div>

        <div class="playlist-content">
            <div class="playlist-actions">
                <button class="play-all-btn" id="playAllBtn">
                    <i class="fas fa-play"></i>
                </button>
                @if (Model.IsLiked == true)
                {
                    <a asp-controller="Like" asp-action="DislikePlaylist" asp-route-id="@Model.Id" class="like-btn" title="Премахни от твоята библиотека">
                        <i class="far fa-heart-broken"></i>
                    </a>
                }
                else
                {
                    <a asp-controller="Like" asp-action="LikePlaylist" asp-route-id="@Model.Id" class="like-btn" title="Запази в твоята библиотека">
                        <i class="far fa-heart"></i>
                    </a>
                }

                <button class="options-btn" title="Още опции">
                    <i class="fas fa-ellipsis-h"></i>
                </button>
            </div>

            <div class="tracklist-container">
                <div class="tracklist-header">
                    <div class="track-number">#</div>
                    <div class="track-title">ЗАГЛАВИЕ</div>
                    <div class="track-duration">
                        <i class="far fa-clock"></i>
                    </div>
                </div>

                <ul class="tracklist">
                    @if (Model.Tracks != null && Model.Tracks.Any())
                    {
                        int trackNumber = 1;
                        foreach (var track in Model.Tracks)
                        {
                            <li class="track" data-index="@(trackNumber - 1)">
                                <div class="track-number-cell">
                                    <span class="track-number">@trackNumber</span>
                                    <button class="play-btn"
                                            data-src="@(track.AudioUrl ?? "")"
                                            data-title="@(track.Title ?? "Неизвестна песен")"
                                            data-artist="@(track.User?.Username ?? "Неизвестен изпълнител")"
                                            data-image="@(track.CoverImage ?? "/images/default-cover.jpg")">
                                        <i class="fas fa-play"></i>
                                    </button>
                                </div>
                                <div class="track-info">
                                    <img src="@(track.CoverImage ?? "/images/default-cover.jpg")" alt="@(track.Title ?? "Неизвестна песен")" class="track-cover">
                                    <div class="track-text">
                                        <span class="track-name">@(track.Title ?? "Неизвестна песен")</span>
                                        <span class="track-artist">@(track.User?.Username ?? "Неизвестен изпълнител")</span>
                                    </div>
                                </div>
                                <div class="track-duration">
                                    <button class="like-track-btn" title="Запази в твоята библиотека">
                                        <i class="far fa-heart"></i>
                                    </button>
                                    <button class="more-options-btn" title="Още">
                                        <i class="fas fa-ellipsis-h"></i>
                                    </button>
                                </div>
                            </li>
                            trackNumber++;
                        }
                    }
                    else
                    {
                        <li class="empty-tracklist">
                            <p>Няма налични песни за този плейлист.</p>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
}

