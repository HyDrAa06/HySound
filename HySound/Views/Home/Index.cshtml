@{
    Layout = "_Layout";
}
@model IEnumerable<TrackViewModel>

@{
    Layout = "_Layout";
}

<!-- Hero Section -->
<div class="home-hero-section">
    <div class="home-hero-content">
        <h1>Discover Your Next Favorite Track</h1>
        <p>Endless music, tailored to your taste.</p>
        <button class="home-cta-btn">Explore Tracks</button>
    </div>
</div>

<!-- Featured Section -->
<div class="home-featured-section">
    <h2 class="home-section-title">Featured Tracks</h2>
    <div class="home-tracks-grid">
        @foreach (var track in Model)
        {
            <div class="home-track-card">
                <div class="home-track-image">
                    <img src="~/images/@track.ImageLink" alt="@track.Title" class="home-track-img">
                </div>
                <div class="home-track-info">
                    <h3>@track.Title</h3>
                    <p>@track.GenreName</p>
                    <a href="@track.AudioUrl" class="home-play-btn">Play</a>
                </div>
            </div>
        }
    </div>
</div>

<!-- CTA Section -->
<div class="home-cta-section">
    <h2>Join the Revolution</h2>
    <p>Millions of tracks await. Sign up now!</p>
    <button class="home-cta-btn">Sign Up</button>
</div>

<!-- Footer -->
<div class="home-footer">
    <p>&copy; 2025 HySound - All Rights Reserved</p>
</div>
