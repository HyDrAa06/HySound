@using HySound.ViewModels
@model AddAlbumViewModel

<div class="album-container">
    <h1 class="album-title">Create New Album</h1>

    <form method="post" class="album-form" enctype="multipart/form-data">
        <input type="text" placeholder="Album Title" asp-for="Title" class="album-input" required />
        <input type="date" asp-for="ReleaseDate" class="album-input" required />

        <div class="add-track-input-group" id="fileUploadGroup">
            <label for="imageFile" class="add-track-input-label">Cover image</label>
            <input type="file" id="Picture" asp-for="Picture" class="add-track-input-field" accept="image/*" />
        </div>

        <select asp-for="UserId" asp-items="Model.UserList" class="album-select">
            <option value="">Select an Artist</option>
        </select>

        <div class="track-selection">
            <h2>Select Tracks</h2>
            <div class="track-list">
                @foreach (var track in Model.Tracks)
                {
                    <label class="track-item" data-track-id="@track.Value">
                        <div class="track-card">
                            <img src="@Model.TrackPictures.FirstOrDefault(x=>x.Key.ToString() == track.Value).Value" alt="@track.Text" class="track-image" />
                            <span class="track-name">@track.Text</span>
                        </div>
                        <input type="checkbox" name="SelectedTracksIds" value="@track.Value" class="track-checkbox" />
                    </label>
                }
            </div>
        </div>

        <button type="submit" class="album-submit">Create Album</button>
    </form>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const checkboxes = document.querySelectorAll(".track-checkbox");
        checkboxes.forEach(checkbox => {
            checkbox.addEventListener("change", function () {
                this.parentElement.classList.toggle("selected", this.checked);
            });
        });
    });
</script>

<style>
    /* Overall Background Styling */
    body {
        background: #121212;
        color: white;
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        height: 100vh;
    }

    /* Container to hold content */
    .album-container {
        background: #121212;
        padding: 40px;
        width: 100%;
        max-width: 1200px;
        margin: auto;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        overflow: hidden;
    }

    /* Title Styling */
    .album-title {
        font-size: 2rem;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Form Fields */
    .album-input, .album-select {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border-radius: 5px;
        background: #333;
        color: white;
        border: none;
    }

    /* Track Section Title */
    .track-selection h2 {
        margin-top: 20px;
        font-size: 1.5rem;
    }

    /* Track List Container (Bigger, Closer Cards) */
    .track-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(160px, 1fr)); /* Bigger cards */
        gap: 15px; /* Smaller gap between cards */
        margin-top: 20px;
    }

    /* Styling for Individual Track Items */
    .track-item {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
        border-radius: 8px;
        background: #1e1e1e;
        cursor: pointer;
        text-align: center;
        width: 100%;
        height: 180px; /* Card height adjusted */
        position: relative;
        overflow: hidden;
        transition: transform 0.3s ease;
    }

        /* Styling for the Track Item when selected */
        .track-item.selected {
            background: #1db954;
        }

    /* Track Card Details */
    .track-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
        position: relative;
    }

    /* Track Image Styling */
    .track-image {
        width: 100%;
        height: 100%;
        border-radius: 8px;
        object-fit: cover; /* Ensures the image covers the entire card */
    }

    /* Track Name Styling */
    .track-name {
        position: absolute;
        bottom: 10px;
        color: white;
        font-size: 0.9rem;
        font-weight: 500;
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
        width: 100%;
        text-align: center;
    }

    /* Checkbox Hidden but Visible When Selected */
    .track-checkbox {
        position: absolute;
        top: 5px;
        right: 5px;
        visibility: hidden;
    }

    .track-item.selected .track-checkbox {
        visibility: visible;
    }

    /* Submit Button Styling */
    .album-submit {
        padding: 8px 15px;
        background: #1db954;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background 0.3s;
        font-size: 1rem;
        width: auto;
        margin: 20px auto 0;
        display: block;
    }

        .album-submit:hover {
            background: #1ed760;
        }
</style>
