            background-color: #222;
            box-shadow: 0 0 0 2px rgba(29, 185, 84, 0.5);
        }

    /* Action Buttons */
    .action-buttons {
        display: flex;
        gap: 12px;
    }

    .add-album-btn, .filter-btn {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 10px 18px;
        border-radius: 24px;
        border: none;
