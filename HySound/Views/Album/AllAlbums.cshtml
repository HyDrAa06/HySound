@using HySound.ViewModels.Album
@model AlbumFilterViewModel

<div class="dashboard-container">
    <!-- Sidebar placeholder - would be in your layout -->

    <main class="main-content">
        <div class="albums-header">
            <div class="header-left">
                <h1 class="page-title">Albums Management</h1>
                <p class="page-subtitle">Manage your music collection</p>
            </div>

            <div class="header-right">
                <form class="search-form">
                    <div class="search-container">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" asp-for="Search" class="search-bar" placeholder="Search albums...">
                    </div>
                </form>

                <div class="action-buttons">
                    <div class="filter-dropdown">
                        <button class="filter-btn">
                            <i class="fas fa-filter"></i>
                            <span>Filter</span>
                        </button>
                        <!-- Filter dropdown content would go here -->
                    </div>

                    <a asp-controller="Album" asp-action="AddAlbum" class="add-album-btn">
                        <i class="fas fa-plus"></i>
                        <span>New Album</span>
                    </a>
                </div>
            </div>
        </div>

        <div class="stats-bar">
            <div class="stat-item">
                <span class="stat-value">@Model.Albums.Count()</span>
                <span class="stat-label">Total Albums</span>
            </div>
        </div>

        <div class="view-controls">
            <div class="view-toggle">
                <button class="view-btn active" data-view="grid">
                    <i class="fas fa-th"></i>
                </button>
                <button class="view-btn" data-view="list">
                    <i class="fas fa-list"></i>
                </button>
            </div>

            <div class="sorting-options">
                <label>Sort by:</label>
                <select class="sort-select">
                    <option value="newest">Newest</option>
                    <option value="oldest">Oldest</option>
                    <option value="popular">Most Popular</option>
                    <option value="alphabetical">A-Z</option>
                </select>
            </div>
        </div>

        <div class="albums-container">
            <div id="grid-view" class="albums-grid view-container">
                @foreach (var album in Model.Albums)
                {
                    <div class="album-card">
                        <div class="album-cover">
                            <img src="@album.CoverImage" alt="@album.Title">
                            <div class="play-overlay">
                                <button class="play-button"><i class="fas fa-play"></i></button>
                            </div>
                        </div>
                        <div class="album-info">
                            <h3 class="album-title">@album.Title</h3>
                            <p class="album-artist">@album.UserName</p>
                        </div>
                        <div class="card-actions">
                            <div class="primary-actions">
                                <a asp-controller="Album" asp-action="Details" asp-route-id="@album.Id" class="action-btn view-btn">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-controller="Album" asp-action="Update" asp-route-id="@album.Id" class="action-btn edit-btn">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </div>
                            <div class="secondary-actions">
                                <button class="action-btn more-btn" onclick="toggleDropdown('@album.Id')">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <div id="dropdown-@album.Id" class="dropdown-menu">
                                    <a asp-controller="Album" asp-action="AddSong" asp-route-albumId="@album.Id" class="dropdown-item">
                                        <i class="fas fa-plus"></i> Add Song
                                    </a>
                                    <a asp-controller="Album" asp-action="Statistics" asp-route-id="@album.Id" class="dropdown-item">
                                        <i class="fas fa-chart-bar"></i> Statistics
                                    </a>
                                    <a asp-controller="Album" asp-action="Delete" asp-route-id="@album.Id" class="dropdown-item delete-item">
                                        <i class="fas fa-trash"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- List View -->
            <div id="list-view" class="albums-list view-container">
                <table class="albums-table">
                    <thead>
                        <tr>
                            <th>Cover</th>
                            <th>Title</th>
                            <th>Artist</th>
                            <th>Songs</th>
                            <th>Plays</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var album in Model.Albums)
                        {
                            <tr>
                                <td>
                                    <div class="mini-cover">
                                        <img src="@album.CoverImage" alt="@album.Title">
                                    </div>
                                </td>
                                <td>@album.Title</td>
                                <td>@album.UserName</td>
                                <td>
                                    <div class="table-actions">
                                        <a asp-controller="Album" asp-action="Details" asp-route-id="@album.Id" class="action-btn view-btn">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="Album" asp-action="Update" asp-route-id="@album.Id" class="action-btn edit-btn">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="action-btn more-btn" onclick="toggleDropdown('table-@album.Id')">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <div id="dropdown-table-@album.Id" class="dropdown-menu">
                                            <a asp-controller="Album" asp-action="AddSong" asp-route-albumId="@album.Id" class="dropdown-item">
                                                <i class="fas fa-plus"></i> Add Song
                                            </a>
                                            <a asp-controller="Album" asp-action="Statistics" asp-route-id="@album.Id" class="dropdown-item">
                                                <i class="fas fa-chart-bar"></i> Statistics
                                            </a>
                                            <a asp-controller="Album" asp-action="Delete" asp-route-id="@album.Id" class="dropdown-item delete-item">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (!Model.Albums.Any())
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-compact-disc"></i>
                </div>
                <h3>No Albums Found</h3>
                <p>Get started by creating your first album</p>
                <a asp-controller="Album" asp-action="AddAlbum" class="empty-action-btn">
                    <i class="fas fa-plus"></i> Create Album
                </a>
            </div>
        }
    </main>
</div>

<script>
    // View toggle functionality - improved to properly hide/show views
    document.addEventListener('DOMContentLoaded', function () {
        const gridView = document.getElementById('grid-view');
        const listView = document.getElementById('list-view');

        // Initialize default view
        gridView.style.display = 'grid';
        listView.style.display = 'none';

        // Toggle between views
        document.querySelectorAll('.view-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                const view = this.getAttribute('data-view');

                // Update active button
                document.querySelectorAll('.view-btn').forEach(b => b.classList.remove('active'));
                this.classList.add('active');

                // Show selected view
                if (view === 'grid') {
                    gridView.style.display = 'grid';
                    listView.style.display = 'none';
                } else {
                    listView.style.display = 'block';
                    gridView.style.display = 'none';
                }
            });
        });
    });

    function toggleDropdown(id) {
        const dropdown = document.getElementById('dropdown-' + id);
        if (dropdown) {
            dropdown.classList.toggle('show');

            // Close all other dropdowns
            document.querySelectorAll('.dropdown-menu.show').forEach(menu => {
                if (menu.id !== 'dropdown-' + id) {
                    menu.classList.remove('show');
                }
            });

            // Close dropdown when clicking outside
            document.addEventListener('click', function closeDropdown(e) {
                if (!e.target.closest('.more-btn') && !e.target.closest('.dropdown-menu')) {
                    dropdown.classList.remove('show');
                    document.removeEventListener('click', closeDropdown);
                }
            });
        }
    }
</script>

<style>
    /* Base styles */
    * {
        margin: 0;
        padding: 0;
