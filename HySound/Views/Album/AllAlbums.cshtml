        color: #b3b3b3;
    }
    
    .metric {
        display: flex;
        align-items: center;
        gap: 4px;
    }
    
    .metric i {
        color: #1DB954;
    }
    
    /* Card Actions */
    .card-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 16px;
    }
    
    .primary-actions {
        display: flex;
        gap: 8px;
    }
    
    .action-btn {
        background: #1f1f1f; /* Darker buttons */
        color: #fff;
        border: none;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.2s;
    }
    
    .view-btn:hover {
        background: #4a90e2;
        color: white;
    }
    
    .edit-btn:hover {
        background: #1db954;
        color: white;
    }
    
    .more-btn:hover {
        background: #333;
    }
    
    /* Dropdown menu */
    .dropdown-menu {
        display: none;
        position: absolute;
        right: 16px;
        bottom: 50px;
        background: #181818;
        border-radius: 8px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        z-index: 10;
        min-width: 180px;
        border: 1px solid #2a2a2a;
        overflow: hidden;
    }
    
    .dropdown-menu.show {
        display: block;
        animation: fadeIn 0.2s ease;
    }
    
    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    
    .dropdown-item {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 16px;
        color: #fff;
        text-decoration: none;
        font-size: 14px;
        transition: all 0.2s;
    }
    
    .dropdown-item:hover {
        background: #252525;
    }
    
    .dropdown-item i {
        width: 16px;
        text-align: center;
    }
    
    .delete-item {
        color: #ff5252;
    }
    
