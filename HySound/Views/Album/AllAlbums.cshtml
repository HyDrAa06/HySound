        color: #b3b3b3;
        position: sticky;
        top: 0;
    }
    
    .albums-table td {
        padding: 12px 16px;
        border-bottom: 1px solid #1f1f1f;
    }
    
    .albums-table tr:hover {
        background: #181818;
    }
    
    .albums-table tr:last-child td {
        border-bottom: none;
    }
    
    .mini-cover {
        width: 40px;
        height: 40px;
        border-radius: 4px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
