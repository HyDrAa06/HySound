@using HySound.ViewModels.User
@model UserViewModel

<div class="user-profile-container">
    <!-- Бутон за връщане -->
    <div class="back-button-container">
        <a asp-action="Search" asp-controller="Home" class="back-btn" title="Назад">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>

    <div class="user-profile-header">
        <div class="profile-img-container">
            <img src="@Model.ProfilePicture" alt="@Model.Name" class="profile-img">
        </div>
        <div class="user-info">
            <h1 class="user-name">@Model.Name</h1>
            <p class="user-bio">@Model.Bio</p>
            <div class="follow-info">
                <span class="followers-count">@Model.FollowersCount последователи</span>
                <span class="following-count">@Model.FollowingCount следвани</span>
            </div>
            @if (Model.IsFollowed == false)
            {
                <a asp-controller="User" asp-action="Follow" asp-route-followedId="@Model.Id" class="btn follow-btn">Следвай</a>
            }
            @if (Model.IsFollowed == true)
            {
                <a asp-controller="User" asp-action="Unfollow" asp-route-followedId="@Model.Id" class="btn unfollow-btn">Спри да следваш</a>
            }
        </div>
    </div>

   
</div>

<style>
    /* Общи стилове */
    body {
        background-color: #121212;
        font-family: 'Roboto', sans-serif;
    }

    .user-profile-container {
        padding: 40px;
        background-color: #181818;
        color: white;
        max-width: 1200px;
        margin: 0 auto;
        border-radius: 10px;
    }

    /* Бутон за връщане */
    .back-button-container {
        margin-bottom: 20px;
    }

    .back-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        background: rgba(18, 18, 18, 0.7);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #b3b3b3;
        font-size: 14px;
        border-radius: 50%;
        text-decoration: none;
        transition: all 0.3s ease;
        padding: 0;
    }

        .back-btn i {
            font-size: 14px;
            margin: 0;
        }

        .back-btn:hover {
            background: rgba(51, 51, 51, 0.7);
            border-color: #b3b3b3;
            color: white;
        }

    /* Заглавие на профила */
    .user-profile-header {
        display: flex;
        align-items: center;
        margin-bottom: 40px;
        padding-bottom: 30px;
        border-bottom: 1px solid #333;
    }

    .profile-img-container {
        width: 180px;
        height: 180px;
        border-radius: 50%;
        overflow: hidden;
        margin-right: 20px;
    }

    .profile-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .user-info {
        flex: 1;
        text-align: left;
        padding-left: 0;
    }

    .user-name {
        font-size: 48px;
        font-weight: bold;
        margin-bottom: 10px;
        color: #fff;
        text-transform: uppercase;
        margin-left: 0;
    }

    .user-bio {
        font-size: 16px;
        color: #b3b3b3;
        margin-bottom: 15px;
        max-width: 600px;
        margin-left: 0;
    }

    .follow-info {
        font-size: 16px;
        color: #b3b3b3;
        margin-bottom: 15px;
        max-width: 600px;
        margin-left: 0;
    }

    .followers-count,
    .following-count {
        margin-right: 20px;
    }

    /* Бутон за следване - Spotify Green */
    .follow-btn {
        background-color: #1DB954;
        color: #fff;
        border: none;
        padding: 12px 20px;
        border-radius: 25px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.2s ease-in-out;
    }

        .follow-btn:hover {
            background-color: #1aa34a;
            transform: scale(1.05);
        }

    /* Бутон за спиране на следване - Spotify Grey */
    .unfollow-btn {
        background-color: #535353;
        color: #fff;
        border: none;
        padding: 12px 20px;
        border-radius: 25px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.2s ease-in-out;
    }

        .unfollow-btn:hover {
            background-color: #3e3e3e;
            transform: scale(1.05);
        }

    /* Секция за плейлисти */
    .user-playlists {
        margin-top: 40px;
    }

    .section-title {
        font-size: 32px;
        font-weight: bold;
        color: white;
        margin-bottom: 20px;
        text-transform: uppercase;
        text-align: center;
    }

    .playlists-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
        justify-items: center;
    }

    .playlist-card {
        background-color: #242424;
        border-radius: 12px;
        overflow: hidden;
        cursor: pointer;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
        width: 100%;
        max-width: 250px;
        text-align: center;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.3);
    }

        .playlist-card:hover {
            transform: translateY(-8px);
            box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.5);
        }

    .playlist-link {
        display: block;
        text-decoration: none;
        color: white;
    }

    .playlist-img-container {
        position: relative;
        width: 100%;
        height: 180px;
        overflow: hidden;
        border-radius: 12px 12px 0 0;
    }

    .playlist-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

        .playlist-img:hover {
            transform: scale(1.05);
        }

    .playlist-info {
        padding: 20px 10px 10px 10px;
        background-color: #242424;
        border-radius: 0 0 12px 12px;
        text-align: center;
    }

    .playlist-title {
        font-size: 18px;
        font-weight: bold;
        color: white;
        margin: 0;
        padding-left: 5px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .playlist-card::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0));
        border-radius: 12px;
    }

    /* Медийни заявки за мобилна отзивчивост */
    @@media (max-width: 768px) {
        .user-profile-header {
            flex-direction: column;
            align-items: center;
        }

        .profile-img-container {
            width: 140px;
            height: 140px;
            margin-right: 0;
            margin-bottom: 20px;
        }

        .user-info {
            text-align: center;
            padding-left: 0;
        }

        .follow-btn {
            width: 180px;
            margin-left: 0;
        }

        .playlists-grid {
            gap: 15px;
        }

        .playlist-card {
            max-width: 220px;
        }

        .user-name {
            text-align: center;
            margin-left: 0;
        }
    }
</style>