@using HySound.Models.Models
@model IEnumerable<User>

<div class="container-fluid py-5">
    <!-- Header with improved Spotify-like styling -->
    <div class="row align-items-center mb-5">
        <div class="col-12">
            <h1 class="display-4 text-white fw-bold mb-0">Потребители</h1>
            <p class="text-muted mt-2">Открий хора в HySound</p>
        </div>
    </div>

    <!-- Enhanced Users Grid with Spotify-like cards -->
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-4">
        @foreach (var user in Model)
        {
            <div class="col">
                <div class="card bg-dark text-white h-100 spotify-card">
                    <div class="card-body text-center p-4">
                        <!-- Circular profile picture with improved styling -->
                        <div class="profile-container mb-4">
                            @if (!string.IsNullOrEmpty(user.ProfilePicture))
                            {
                                <img src="@user.ProfilePicture" class="rounded-circle profile-img" alt="Профил на @user.Username">
                            }
                            else
                            {
                                <div class="profile-placeholder rounded-circle d-flex align-items-center justify-content-center">
                                    <span class="fs-1">@(user.Username.Length > 0 ? user.Username[0].ToString().ToUpper() : "?")</span>
                                </div>
                            }
                            <div class="edit-overlay">
                                <a asp-controller="User" asp-action="Update" asp-route-id="@user.Id" class="btn btn-sm btn-primary rounded-circle edit-btn">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                            </div>
                        </div>

                        <!-- User info with improved typography -->
                        <h5 class="card-title fw-bold mb-1 text-truncate">@user.Username</h5>
                        <p class="card-text text-muted small mb-3">@user.Email</p>

                        <!-- Bio with better handling -->
                        <div class="bio-container">
                            @if (!string.IsNullOrEmpty(user.Bio))
                            {
                                <p class="card-text bio-text mb-4">@(user.Bio.Length > 80 ? user.Bio.Substring(0, 77) + "..." : user.Bio)</p>
                            }
                            else
                            {
                                <p class="card-text bio-text text-muted fst-italic mb-4">Няма налична биография</p>
                            }
                        </div>

                        <!-- Action buttons with improved styling -->
                        <div class="d-flex justify-content-between mt-auto">
                            <a href="#" class="btn btn-link text-muted p-0 view-btn" data-bs-toggle="tooltip" title="Виж профила">
                                <i class="bi bi-eye-fill"></i>
                            </a>
                            <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-link text-danger p-0 delete-btn" data-bs-toggle="tooltip" title="Изтрий">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Enhanced Spotify-inspired styling */
    body {
        background: linear-gradient(to bottom, #121212, #191414);
        color: white;
        font-family: 'Circular', 'Helvetica Neue', Helvetica, Arial, sans-serif;
    }

    .container-fluid {
        padding: 0 32px;
    }

    /* Enhanced profile image styling */
    .profile-container {
        position: relative;
        width: 160px;
        height: 160px;
        margin: 0 auto;
    }

    .profile-img {
        width: 160px;
        height: 160px;
        object-fit: cover;
        border: 3px solid #1DB954;
        box-shadow: 0 8px 24px rgba(0,0,0,0.4);
        transition: all 0.3s ease;
    }

    .profile-placeholder {
        width: 160px;
        height: 160px;
        margin: 0 auto;
        color: white;
        background: linear-gradient(45deg, #1DB954, #1ed760);
        box-shadow: 0 8px 24px rgba(0,0,0,0.4);
        transition: all 0.3s ease;
    }

    /* Edit overlay */
    .edit-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: rgba(0,0,0,0.5);
        opacity: 0;
        transition: opacity 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .profile-container:hover .edit-overlay {
        opacity: 1;
    }

    .edit-btn {
        background-color: #1DB954;
        border: none;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .edit-btn:hover {
            background-color: #1ed760;
            transform: scale(1.1);
        }

    /* Enhanced card styling */
    .spotify-card {
        background: rgba(24, 24, 24, 0.8);
        border: none;
        border-radius: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 8px 16px rgba(0,0,0,0.3);
        backdrop-filter: blur(10px);
    }

        .spotify-card:hover {
            background: rgba(40, 40, 40, 0.9);
            transform: translateY(-10px);
            box-shadow: 0 16px 32px rgba(0,0,0,0.4);
        }

    .bio-container {
        min-height: 60px;
    }

    .bio-text {
        font-size: 0.9rem;
        line-height: 1.5;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }

    /* Button styling */
    .view-btn, .delete-btn {
        font-size: 1.2rem;
        transition: all 0.2s ease;
    }

        .view-btn:hover {
            color: #1DB954 !important;
            transform: scale(1.2);
        }

        .delete-btn:hover {
            color: #FF5252 !important;
            transform: scale(1.2);
        }

    /* Animations */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .col {
        animation: fadeIn 0.5s ease forwards;
        opacity: 0;
    }

        .col:nth-child(1) {
            animation-delay: 0.1s;
        }

        .col:nth-child(2) {
            animation-delay: 0.2s;
        }

        .col:nth-child(3) {
            animation-delay: 0.3s;
        }

        .col:nth-child(4) {
            animation-delay: 0.4s;
        }

        .col:nth-child(5) {
            animation-delay: 0.5s;
        }

        .col:nth-child(6) {
            animation-delay: 0.6s;
        }

        .col:nth-child(7) {
            animation-delay: 0.7s;
        }

        .col:nth-child(8) {
            animation-delay: 0.8s;
        }

        .col:nth-child(9) {
            animation-delay: 0.9s;
        }

        .col:nth-child(10) {
            animation-delay: 1.0s;
        }
</style>

<!-- Required scripts -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    });
</script>

